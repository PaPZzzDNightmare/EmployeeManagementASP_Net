@model IEnumerable<Employee>
@{ 
    ViewBag.PageTitle = "Employee List";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "mee.png");
        
        <div class="card card-3 m-3 ">
            <div class="card-header">
                <h3>@employee.Name</h3>
                <h6>Department: @employee.Department</h6>
            </div>
            <img class="image-thumbnail card-img-top" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-outline-primary m-1">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>